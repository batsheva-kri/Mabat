<InventoryLayout>:
    orientation: 'vertical'

<MainOrdersPage>:
    MDFloatLayout:
        MDTopAppBar:
            title: " - 转"
            pos_hint: {"top": 1}

        MDLabel:
            text: "专  注专转 转"
            halign: "center"
            pos_hint: {"center_y": 0.85}

        MDCard:
            orientation: "vertical"
            padding: dp(16)
            spacing: dp(12)
            size_hint: 0.9, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "y": 0.05}
            md_bg_color: app.theme_cls.bg_dark

            MDRaisedButton:
                text: ""
                on_release: app.show_inventory_page()
                pos_hint: {"center_x": 0.5}

<NewCustomerPage>:
    MDCard:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(12)
        size_hint: 0.9, None
        height: self.minimum_height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        md_bg_color: app.theme_cls.bg_dark

        MDLabel:
            text: "拽 砖"
            halign: "center"

        MDTextField:
            hint_text: "砖"

        MDTextField:
            hint_text: "驻"

        MDTextField:
            hint_text: ""

        MDTextField:
            hint_text: "注专转"

        MDRectangleFlatButton:
            text: " 砖专 砖 "
            on_release: root.save_and_open_invitation()

<InventoryPage>:
    MDCard:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(12)
        size_hint: 0.9, None
        height: self.minimum_height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        md_bg_color: app.theme_cls.bg_dark

        MDLabel:
            text: " "
            halign: "center"

        MDRaisedButton:
            text: " 砖注"
            on_release: root.show_new_stock_suppliers()

        MDRaisedButton:
            text: "转 拽转 "
            on_release: root.show_current_stock_page()